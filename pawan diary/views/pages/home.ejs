<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
   
    <!-- <link rel="stylesheet" href="/css/home.css"> -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #0873dd; /* Light background for contrast */
        }

        .card {
            border: none;
            border-radius: 10px; /* Rounded corners */
            transition: transform 0.2s; /* Smooth scaling on hover */
            max-width: 300px; /* Setting a max width for smaller card */
            margin: auto; /* Centering card in the column */
        }

        .card:hover {
            transform: scale(1.05); /* Enlarge on hover */
        }

        .user-logo {
            width: 80px;
            height: 80px;
        }

        .badge-custom {
            background-color: #007bff; /* Custom badge color */
        }
    </style>

    
    <link rel="stylesheet" href="/css/nav.css">
</head>

<body>
    <%- include('../include/nav.ejs'); -%>
  
    <div class="container mt-4">
        <div class="row">
            <% for (let index = 0; index < sendtext.length; index++) { %>
                <% const element = sendtext[index]; %>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-sm p-3">
                        <div class="text-center">
                            <a href="/user/profile/<%= element.ownwer._id %>"> <img src="https://img.freepik.com/free-vector/smiling-young-man-illustration_1308-174669.jpg" alt="User Profile" class="user-logo rounded-circle mb-3" /></a>
                           
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= element.ownwer.name %></h5>
                            <div class="d-flex justify-content-between">
                                <!-- <span class="badge badge-custom">Followers: 54</span> -->
                                <!-- <span class="badge badge-custom">Likes: <%= element.likes.length %></span> -->
                            </div>
                            <h6 class="mt-3">Story Title: <%= element.title %></h6>
                            <!-- <p class="card-text"><%= element.title %></p> -->
                            <p class="storyline">
                                <%- element.content ? element.content.substring(0, 5) : "No content available." %>...
                            </p>
                            <a href="/post/view/<%=element.id %>" class="btn btn-primary w-100">Read More</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const clickBlock = document.querySelector(".clickblock");
            const colapaps = document.querySelector(".colapaps");

            clickBlock.addEventListener("click", function () {
                // Toggle colapaps visibility
                colapaps.style.display =
                    colapaps.style.display === "none" || colapaps.style.display === ""
                        ? "flex"
                        : "none";
            });

            // Close colapaps if clicking outside
            document.addEventListener("click", function (event) {
                if (
                    !clickBlock.contains(event.target) &&
                    !colapaps.contains(event.target)
                ) {
                    colapaps.style.display = "none";
                }
            });
        });

  
    </script>
</body>

</html>